<%- include('partials/header') %>

<body>
  <div class="row" style="padding: 4% 10% 0% 10%;">
    <div class="col-lg-3 card">
      <img class="card-img-top" src="<%= img1 %>" style="height:40%" alt="">
      <div class="card-body">
        <h5> First Name: <%=name.givenName%> <%= name1 %> <br> Last Name: <%= name.familyName %> </h5>
        <h5> Username: <%=username%></h5>
        <h5> Your registered number: <%= userid %> </h5>
      </div>
    </div>
    <div class="col-lg-3 card" style="margin-left:1rem;">
      <img class="card-img-top" src="<%=img%> " style="height:40%" alt="">
      <div class="card-body">
        <h1 class="card-title" style="font-family: 'Montserrat', sans-serif; size: 3rem; line-height: 1.5;"><%=product%></h1>
        <h5>Price: â‚¹<%=price%></h5>
      </div>
    </div>
    <div class="col-lg-4" style="margin-left:15%">
      <form action="/<%=id1%>/order/success" method="POST">
        <div class="form-group" >
          <label for="exampleInputAddress">Address</label>
          <input type="text" class="form-control" name="address" placeholder="Address">
          <small id="emailHelp" class="form-text text-muted">Enter your complete address here.</small>
        </div >
        <div class="form-group" style="margin-bottom:60%">
          <label for="examplecontact">Contact Number</label>
          <input type="text" class="form-control" name="number" placeholder="Contact Number">
        </div >
        <h5 class="form-group" style="color:red;"><%=warning%></h5>
        <h5 class="form-group">Only COD Available for Now</h5>
        <button type="submit" class="btn btn-primary btn-lg form-group">Book Now!</button>
      </form>
    </div>
  </div>
  <div class="" style="padding-bottom: 2rem;">

  </div>
</body>
